  
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>To Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <h1>Animals</h1>

        @if (@Model.Count == 0)
        {
        <h3>No animals have been added yet!</h3>
        } 

        <ul>
            @foreach (Animal animal in Model)
            {
                <li>@Html.ActionLink($"{animal.Name}", "Details", new { id = animal.AnimalId })</li>
            }
        </ul>

        <p>@Html.ActionLink("Add New Animal", "Create")</p>
    </div>
</body>
</html>