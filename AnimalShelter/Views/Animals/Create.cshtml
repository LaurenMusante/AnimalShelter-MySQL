
@model AnimalShelter.Models.Animal

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>To Do List</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link href="~/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <h4>Add a new animal</h4>
        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.Type)
            @Html.TextBoxFor(model => model.Type)
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
            @Html.LabelFor(model => model.Gender)
            @Html.TextBoxFor(model => model.Gender)
            @Html.LabelFor(model => model.AdmittanceDate)
            @Html.TextBoxFor(model => model.AdmittanceDate)
             @Html.LabelFor(model => model.Breed)
            @Html.TextBoxFor(model => model.Breed)

            

            <input type="submit" value="Add new task" />
        }
        <p>@Html.ActionLink("Show all animals", "Index", "Animals")</p>
    </div>
</body>
</html>